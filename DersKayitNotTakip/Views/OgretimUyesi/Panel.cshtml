@model IEnumerable<dynamic>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark"><i class="fa-solid fa-users-viewfinder text-primary"></i> Dersime Kayıtlı Öğrenciler</h2>
            <p class="text-muted mb-0">Öğrencilerinize not vermek için ilgili satırdaki butonu kullanınız.</p>
        </div>
        <a asp-controller="Account" asp-action="Logout" class="btn btn-danger shadow-sm">
            <i class="fa-solid fa-power-off"></i> Çıkış
        </a>
    </div>

    <div class="card card-custom p-0 border-0 shadow-sm overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary border-bottom">
                    <tr>
                        <th class="py-3 ps-4">Ad Soyad</th>
                        <th>Email Adresi</th>
                        <th>Ders</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var o in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <i class="fa-solid fa-user-graduate"></i>
                                        </div>
                                        @o.Ad @o.Soyad
                                    </div>
                                </td>
                                <td class="text-muted">@o.Email</td>
                                <td><span class="badge bg-info text-dark">@o.DersAdi</span></td>
                                <td class="text-end pe-4">
                                    <a asp-action="NotGir"
                                       asp-route-id="@o.DersKayitId"
                                       class="btn btn-sm btn-outline-success shadow-sm px-3 fw-bold">
                                        <i class="fa-solid fa-pen-to-square me-1"></i> Not Gir
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-user-slash fa-2x mb-3 d-block"></i>
                                Şu an dersinize kayıtlı öğrenci bulunmamaktadır.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>