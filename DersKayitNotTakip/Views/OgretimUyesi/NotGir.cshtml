@{
    ViewData["Title"] = "Not Girişi";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card card-custom border-0 shadow-lg">
            <div class="card-header bg-primary text-white text-center p-4">
                <h3 class="mb-0 fw-bold"><i class="fa-solid fa-pen-to-square"></i> Not Girişi</h3>
                <small class="opacity-75">Öğrenci Notlandırma Ekranı</small>
            </div>

            <div class="card-body p-4">
                <form method="post">
                    <input type="hidden" name="dersKayitId" value="@ViewBag.DersKayitId" />

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary">Vize Notu</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-clipboard-list text-primary"></i></span>
                            <input type="number" name="vize" class="form-control form-control-lg" placeholder="0 - 100" min="0" max="100" required />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary">Final Notu</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-graduation-cap text-success"></i></span>
                            <input type="number" name="final" class="form-control form-control-lg" placeholder="0 - 100" min="0" max="100" />
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="fa-solid fa-save me-2"></i> Kaydet ve Dön
                        </button>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>