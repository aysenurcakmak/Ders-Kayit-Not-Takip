<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card card-custom p-4">
            <div class="card-body">
                <h3 class="card-title text-dark mb-4">
                    <i class="fa-solid fa-door-open"></i> Ders Aç (Hoca Atama)
                </h3>

                @if (ViewBag.Mesaj != null)
                {
                    <div class="alert alert-success shadow-sm">
                        <i class="fa-solid fa-check-circle"></i> @ViewBag.Mesaj
                    </div>
                }

                <form method="post">
                    <input type="hidden" name="DonemId" value="1" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Açılacak Ders</label>
                        <select name="DersId" class="form-select" size="5">
                            @foreach (var d in ViewBag.Dersler)
                            {
                                <option value="@d.DersId">@d.DersKodu - @d.DersAdi</option>
                            }
                        </select>
                        <div class="form-text">Listeden dersi seçiniz.</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Dersi Verecek Hoca</label>
                        <select name="OgretimUyesiId" class="form-select">
                            @foreach (var h in ViewBag.Hocalar)
                            {
                                <option value="@h.OgretimUyesiId">@h.Unvan @h.Ad @h.Soyad</option>
                            }
                        </select>
                    </div>

                    <button class="btn btn-dark btn-lg w-100 shadow">
                        <i class="fa-solid fa-link"></i> Atamayı Yap
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>