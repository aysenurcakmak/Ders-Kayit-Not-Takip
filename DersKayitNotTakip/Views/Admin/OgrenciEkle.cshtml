@model DersKayitNotTakip.Models.Ogrenci

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-custom p-4 border-0 shadow">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="card-title text-primary fw-bold m-0">
                    <i class="fa-solid fa-user-plus"></i> Öğrenci Ekle
                </h3>
                <a href="/Admin/OgrenciListe" class="btn btn-sm btn-outline-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Listeye Dön
                </a>
            </div>

            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger shadow-sm">
                    <i class="fa-solid fa-circle-exclamation me-2"></i> @ViewBag.Hata
                </div>
            }

            <form method="post">

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-secondary">Ad</label>
                        <input asp-for="Ad" class="form-control" required placeholder="Örn: Ali" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-secondary">Soyad</label>
                        <input asp-for="Soyad" class="form-control" required placeholder="Örn: Yılmaz" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-secondary">Doğum Tarihi</label>
                        <input asp-for="DogumTarihi" type="date" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-secondary">Email Adresi</label>
                        <input asp-for="Email" type="email" class="form-control" required placeholder="ogrenci@okul.edu.tr" />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold text-secondary">Bölüm</label>
                    <select name="BolumId" class="form-select" required>
                        <option value="">-- Bölüm Seçiniz --</option>
                        @if (ViewBag.Bolumler != null)
                        {
                            @foreach (var b in ViewBag.Bolumler)
                            {
                                <option value="@b.BolumId">@b.BolumAdi</option>
                            }
                        }
                    </select>
                </div>

                <hr class="my-4 text-muted opacity-25">

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-primary">Kullanıcı Adı</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-user"></i></span>
                            <input name="KullaniciAdi" class="form-control" required placeholder="Giriş için kullanıcı adı" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-primary">Şifre</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-lock"></i></span>
                            <input name="Sifre" type="password" class="form-control" required placeholder="******" />
                        </div>
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm hover-scale">
                        <i class="fa-solid fa-save me-2"></i> Öğrenciyi Kaydet
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s;
    }

        .hover-scale:hover {
            transform: scale(1.01);
        }
</style>