@model DersKayitNotTakip.Models.Der

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card border-0 shadow-lg">

            <div class="card-header bg-danger text-white text-center p-4">
                <i class="fa-solid fa-triangle-exclamation fa-4x mb-3"></i>
                <h3 class="fw-bold m-0">Silme İşlemi</h3>
            </div>

            <div class="card-body p-5 text-center">
                <h4 class="text-dark fw-bold mb-3">@Model.DersAdi</h4>
                <p class="text-muted fs-5">
                    Bu dersi silmek istediğinize emin misiniz?<br>
                    <span class="text-danger fw-bold fs-6">(Bu işlem geri alınamaz!)</span>
                </p>

                <div class="alert alert-light border mt-4 text-start">
                    <small class="text-uppercase text-muted fw-bold">Ders Detayları</small>
                    <div class="d-flex justify-content-between mt-2">
                        <span>Ders Kodu:</span>
                        <span class="fw-bold text-dark">@Model.DersKodu</span>
                    </div>
                    <div class="d-flex justify-content-between mt-1">
                        <span>Bölüm:</span>
                        <span class="fw-bold text-dark">@Model.Bolum?.BolumAdi</span>
                    </div>
                </div>

                <form asp-action="DersSil" method="post" class="mt-4">
                    <input type="hidden" asp-for="DersId" />

                    <div class="d-grid gap-2 d-md-block">
                        <a href="/Admin/DersListe" class="btn btn-secondary btn-lg px-4 me-2">
                            <i class="fa-solid fa-xmark"></i> İptal
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="fa-solid fa-trash-can"></i> Evet, Sil
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>