@model DersKayitNotTakip.Models.OgretimUyesi

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card border-0 shadow-lg">
            <div class="card-header bg-danger text-white text-center p-4">
                <i class="fa-solid fa-user-xmark fa-4x mb-3"></i>
                <h3 class="fw-bold m-0">Hocayı Sil</h3>
            </div>
            <div class="card-body p-5 text-center">
                <h4 class="text-dark fw-bold">@Model.Unvan @Model.Ad @Model.Soyad</h4>
                <p class="text-muted mt-3">
                    Bu öğretim üyesini ve sisteme giriş hesabını silmek üzeresiniz.
                </p>

                <form asp-action="OgretimUyesiSil" method="post" class="mt-4">
                    <input type="hidden" asp-for="OgretimUyesiId" />
                    <a href="/Admin/OgretimUyesiListe" class="btn btn-secondary me-2">İptal</a>
                    <button type="submit" class="btn btn-danger">Evet, Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>