@model List<DersKayitNotTakip.Models.Der>

<div class="card card-custom p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-secondary"><i class="fa-solid fa-book"></i> Ders Listesi</h3>
        <a asp-action="DersEkle" class="btn btn-success shadow-sm">
            <i class="fa-solid fa-plus"></i> Yeni Ders
        </a>
    </div>

    @if (TempData["Hata"] != null)
    {
        <div class="alert alert-danger shadow-sm d-flex align-items-center">
            <i class="fa-solid fa-circle-exclamation me-2"></i> @TempData["Hata"]
        </div>
    }
    @if (TempData["Basarili"] != null)
    {
        <div class="alert alert-success shadow-sm d-flex align-items-center">
            <i class="fa-solid fa-check-circle me-2"></i> @TempData["Basarili"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Ders Kodu</th>
                    <th>Ders Adı</th>
                    <th>Bölüm</th>
                    <th style="width: 160px;" class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td class="fw-bold text-danger">@d.DersKodu</td>
                            <td>@d.DersAdi</td>
                            <td><span class="badge bg-secondary">@d.Bolum?.BolumAdi</span></td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-primary me-1" title="Düzenle">
                                    <i class="fa-solid fa-edit"></i>
                                </button>

                                <a asp-action="DersSil" asp-route-id="@d.DersId" class="btn btn-sm btn-outline-danger" title="Sil">
                                    <i class="fa-solid fa-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-4">
                            <i class="fa-solid fa-folder-open fa-2x mb-2 d-block"></i>
                            Kayıtlı ders bulunamadı.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>